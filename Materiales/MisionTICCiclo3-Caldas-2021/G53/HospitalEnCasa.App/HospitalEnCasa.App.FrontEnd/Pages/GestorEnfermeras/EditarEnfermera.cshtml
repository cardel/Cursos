@page
@model HospitalEnCasa.App.FrontEnd.Pages.EditarEnfermeraModel
@using HospitalEnCasa.app.Dominio
@{
}
<h1>Editar Enfermera</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="enfermera.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="enfermera.cedula" class="form-control"  required>
        <span class="text-danger" asp-validation-for="enfermera.password"></span>

    </div>
    <div class="form-group row">
        <label asp-for="enfermera.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="enfermera.nombre" class="form-control" >
        <span class="text-danger" asp-validation-for="enfermera.nombre"></span>
    </div>   
    <div class="form-group row">
        <label asp-for="enfermera.edad" class="col-sm-2">Edad</label>
        <input asp-for="enfermera.edad" class="form-control" >
        <span class="text-danger" asp-validation-for="enfermera.edad"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="enfermera.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="enfermera.genero"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.hospital" class="col-sm-2">Hospital</label>
        <input asp-for="enfermera.hospital" class="form-control" >
        <span class="text-danger" asp-validation-for="enfermera.hospital"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.informacion_laboral" class="col-sm-2">Información laboral</label>
        <input asp-for="enfermera.informacion_laboral" class="form-control"  required>
        <span class="text-danger" asp-validation-for="enfermera.informacion_laboral"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.username" class="col-sm-2">Username</label>
        <input asp-for="enfermera.username" class="form-control"  required>
        <span class="text-danger" asp-validation-for="enfermera.username"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="enfermera.email" class="col-sm-2">Correo electrónico</label>
        <input asp-for="enfermera.email" class="form-control"  required>
        <span class="text-danger" asp-validation-for="enfermera.email"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="enfermera.password" class="col-sm-2">Password</label>
        <input asp-for="enfermera.password" class="form-control"  required>
        <span class="text-danger" asp-validation-for="enfermera.password"></span>
    </div> 
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./Listenfermera" class="btn btn-primary">Cancelar</a>
    </div>
</form>