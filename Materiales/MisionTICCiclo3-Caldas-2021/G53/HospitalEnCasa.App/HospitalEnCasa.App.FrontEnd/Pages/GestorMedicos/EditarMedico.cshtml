@page
@model HospitalEnCasa.App.FrontEnd.Pages.EditarMedicoModel
@using HospitalEnCasa.app.Dominio
@{
}
<h1>Detalle médico</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="medico.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="medico.cedula" class="form-control"  required>
        <span class="text-danger" asp-validation-for="medico.cedula"></span>
    </div>
    <div class="form-group row">
        <label asp-for="medico.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="medico.nombre" class="form-control" >
        <span class="text-danger" asp-validation-for="medico.nombre"></span>
    </div>   
    <div class="form-group row">
        <label asp-for="medico.edad" class="col-sm-2">Edad</label>
        <input asp-for="medico.edad" class="form-control" >
        <span class="text-danger" asp-validation-for="medico.edad"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="medico.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="medico.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="medico.genero"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="medico.hospital" class="col-sm-2">Hospital</label>
        <input asp-for="medico.hospital" class="form-control" >
        <span class="text-danger" asp-validation-for="medico.hospital"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="medico.tarjeta_profesional" class="col-sm-2">Tarjeta profesional</label>
        <input asp-for="medico.tarjeta_profesional" class="form-control"  required>
        <span class="text-danger" asp-validation-for="medico.tarjeta_profesional"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="medico.username" class="col-sm-2">Username</label>
        <input asp-for="medico.username" class="form-control" required>
        <span class="text-danger" asp-validation-for="medico.username"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="medico.email" class="col-sm-2">Correo electrónico</label>
        <input asp-for="medico.email" class="form-control" required>
        <span class="text-danger" asp-validation-for="medico.email"></span>

    </div>  
    <div class="form-group row">
        <label asp-for="medico.password" class="col-sm-2">Correo electrónico</label>
        <input asp-for="medico.password" class="form-control" required>
        <span class="text-danger" asp-validation-for="medico.password"></span>
 
    </div>  
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Editar</button>
        <a asp-page="./ListMedico" class="btn btn-primary">Cancelar</a>
    </div>
</form>
