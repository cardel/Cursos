@page
@model HospitalEnCasa.App.FrontEnd.EditFamiliarModel
@using HospitalEnCasa.app.Dominio
@{
}
<h1>Editar Familiar</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="familiar.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="familiar.cedula" class="form-control" required>
        <span class="text-danger" asp-validation-for="familiar.cedula"></span>
    </div>
    <div class="form-group row">
        <label asp-for="familiar.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="familiar.nombre" class="form-control" >
        <span class="text-danger" asp-validation-for="familiar.nombre"></span>
    </div>   
    <div class="form-group row">
        <label asp-for="familiar.edad" class="col-sm-2">Edad</label>
        <input asp-for="familiar.edad" class="form-control">
        <span class="text-danger" asp-validation-for="familiar.edad"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="familiar.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="familiar.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="familiar.genero"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="familiar.direccion" class="col-sm-2">Dirección</label>
        <input asp-for="familiar.direccion" class="form-control" required>
        <span class="text-danger" asp-validation-for="familiar.direccion"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="familiar.longitud" class="col-sm-2">Longitud</label>
        <input asp-for="familiar.longitud" class="form-control">
        <span class="text-danger" asp-validation-for="familiar.longitud"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="familiar.latitud" class="col-sm-2">Latitud</label>
        <input asp-for="familiar.latitud" class="form-control">
        <span class="text-danger" asp-validation-for="familiar.latitud"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="familiar.username" class="col-sm-2">Nombre de usuario</label>
        <input asp-for="familiar.username" class="form-control" required>
        <span class="text-danger" asp-validation-for="familiar.username"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="familiar.email" class="col-sm-2">Email</label>
        <input asp-for="familiar.email" class="form-control" >
        <span class="text-danger" asp-validation-for="familiar.email"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="familiar.password" class="col-sm-2">Password</label>
        <input asp-for="familiar.password" class="form-control" >
        <span class="text-danger" asp-validation-for="familiar.password"></span>
    </div> 
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./Listfamiliar" class="btn btn-primary">Cancelar</a>
    </div>
</form>