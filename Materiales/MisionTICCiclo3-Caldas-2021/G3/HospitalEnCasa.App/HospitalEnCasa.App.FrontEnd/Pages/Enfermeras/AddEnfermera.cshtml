@page
@model HospitalEnCasa.App.FrontEnd.Pages.AddEnfermeraModel
@using HospitalEnCasa.app.Dominio
@{
}
<h1>Agregar médico</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="enfermera.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="enfermera.cedula" class="form-control">
        <span asp-validation-for="enfermera.cedula" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="enfermera.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="enfermera.nombre" class="form-control">
        <span asp-validation-for="enfermera.nombre" class="text-danger"></span>
    </div>   
    <div class="form-group row">
        <label asp-for="enfermera.edad" class="col-sm-2">Edad</label>
        <input asp-for="enfermera.edad" class="form-control">
        <span asp-validation-for="enfermera.edad" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="enfermera.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="enfermera.genero"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.hospital" class="col-sm-2">Hospital</label>
        <input asp-for="enfermera.hospital" class="form-control">
        <span asp-validation-for="enfermera.hospital" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.informacion_laboral" class="col-sm-2">Información laboral</label>
        <input asp-for="enfermera.informacion_laboral" class="form-control">
        <span asp-validation-for="enfermera.informacion_laboral" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.username" class="col-sm-2">Nombre de usuario</label>
        <input asp-for="enfermera.username" class="form-control">
        <span asp-validation-for="enfermera.username" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.email" class="col-sm-2">Correo electrónico</label>
        <input asp-for="enfermera.email" class="form-control">
        <span asp-validation-for="enfermera.email" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.password" class="col-sm-2">Contraseña</label>
        <input asp-for="enfermera.password" class="form-control">
        <span asp-validation-for="enfermera.password" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./ListEnfermera" class="btn btn-primary">Cancelar</a>
    </div>
</form>