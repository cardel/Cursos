@page
@model HospitalEnCasa.App.FrontEnd.Pages.AddCitaModel
@using HospitalEnCasa.app.Dominio
@{
}
<h1>Crear cita</h1>
<p>En esta pagína podrás crear una cita bien mela</p>
<span class="text-danger">@Model.mensaje</span>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="cedulaPaciente" class="form-control">Paciente</label>
        <select class="form-control" asp-for="cedulaPaciente" asp-items="@Model.pacientes"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaMedico" class="form-control">Medico</label>
        <select class="form-control" asp-for="cedulaMedico" asp-items="@Model.medicos"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cita.dia" class="col-sm-2">Día</label>
        <input asp-for="cita.dia" class="form-control">
        <span asp-validation-for="cita.dia" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="cita.hora" class="col-sm-2">Hora</label>
        <input asp-for="cita.hora" class="form-control">
        <span asp-validation-for="cita.hora" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="cita.sala">Sala</label>
        <div class="col-sm-10">
            <select asp-for="cita.sala" asp-items="Html.GetEnumSelectList<Sala>()"></select>   
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="cita.descripcion">Descripción</label>
        
        <textarea asp-for="cita.descripcion" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./ListCita" class="btn btn-primary">Cancelar</a>
</form>