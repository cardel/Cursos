@page
@model HospitalEnCasa.App.FrontEnd.Pages.EditPacienteModel
@using HospitalEnCasa.app.Dominio;
@{
}
<h1>Agregar Paciente</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="paciente.Id"/>
    <input hidden asp-for="paciente.medico"/>
    <div class="form-group row">
        <label asp-for="paciente.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="paciente.cedula" class="form-control" required>
    </div>
    <div class="form-group row">
        <label asp-for="paciente.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="paciente.nombre" class="form-control">
    </div>   
    <div class="form-group row">
        <label asp-for="paciente.edad" class="col-sm-2">Edad</label>
        <input asp-for="paciente.edad" class="form-control">
    </div>  
    <div class="form-group row">
        <label asp-for="paciente.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="paciente.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
    </div>  
    <div class="form-group row">
        <label asp-for="paciente.direccion" class="col-sm-2">Dirección</label>
        <input asp-for="paciente.direccion" class="form-control">
    </div>  
    <div class="form-group row">
        <label asp-for="paciente.latitud" class="col-sm-2">Latitud</label>
        <input asp-for="paciente.latitud" class="form-control" required>
    </div>  
    <div class="form-group row">
        <label asp-for="paciente.longitud" class="col-sm-2">Longitud</label>
        <input asp-for="paciente.longitud" class="form-control" required>
    </div> 
    <div class="form-group row">
        <label asp-for="cedulaFamiliar" class="col-sm-2">Familiar designado</label>
        <select asp-for="cedulaFamiliar" asp-items="Model.familiares"></select>
    </div> 
    <div class="form-group row">
        <label asp-for="cedulaMedico" class="col-sm-2">Médico</label>
       <select asp-for="cedulaMedico" asp-items="Model.medicos"></select>
    </div> 
    <div class="form-group row">
        <label asp-for="cedulaEnfermera" class="col-sm-2">Enfermera</label>
        <select asp-for="cedulaEnfermera" asp-items="Model.enfermeras"></select>
    </div> 
    <div class="form-group row">
        <label asp-for="paciente.username" class="col-sm-2">Nombre de usuario</label>
        <input asp-for="paciente.username" class="form-control">
    </div> 
    <div class="form-group row">
        <label asp-for="paciente.email" class="col-sm-2">Correo electrónico</label>
        <input asp-for="paciente.email" class="form-control">
    </div> 
    <div class="form-group row">
        <label asp-for="paciente.password" class="col-sm-2">Contraseña</label>
        <input asp-for="paciente.password" class="form-control">
    </div> 
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./Listpacientes" class="btn btn-primary">Cancelar</a>
    </div>
</form>