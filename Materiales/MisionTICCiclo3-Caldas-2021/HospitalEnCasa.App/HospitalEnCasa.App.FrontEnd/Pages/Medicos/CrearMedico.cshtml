@page
@model HospitalEnCasa.App.FrontEnd.Pages.CrearMedicoModel
@{
}
@using HospitalEnCasa.app.Dominio
<h1>Crear médico</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="medico.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="medico.cedula" class="form-control">
        <span asp-validation-for="medico.cedula" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="medico.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="medico.nombre" class="form-control">
        <span asp-validation-for="medico.nombre" class="text-danger"></span>

    </div>   
    <div class="form-group row">
        <label asp-for="medico.edad" class="col-sm-2">Edad</label>
        <input asp-for="medico.edad" class="form-control">
        <span asp-validation-for="medico.edad" class="text-danger"></span>

    </div>  
    <div class="form-group row">
        <label asp-for="medico.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="medico.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span asp-validation-for="medico.genero" class="text-danger"></span>

    </div>  
    <div class="form-group row">
        <label asp-for="medico.nombre_hospital" class="col-sm-2">Hospital</label>
        <input asp-for="medico.nombre_hospital" class="form-control" >
        <span asp-validation-for="medico.nombre_hospital" class="text-danger"></span>

    </div>  
    <div class="form-group row">
        <label asp-for="medico.tarjeta_profesional" class="col-sm-2">Tarjeta profesional</label>
        <input asp-for="medico.tarjeta_profesional" class="form-control" >
        <span asp-validation-for="medico.tarjeta_profesional" class="text-danger"></span>

    </div> 
    <div class="form-group row">
        <label asp-for="medico.username" class="col-sm-2">Username</label>
        <input asp-for="medico.username" class="form-control" >
        <span asp-validation-for="medico.username" class="text-danger"></span>

    </div> 
    <div class="form-group row">
        <label asp-for="medico.email" class="col-sm-2">Email</label>
        <input asp-for="medico.email" class="form-control" >
        <span asp-validation-for="medico.email" class="text-danger"></span>

    </div> 
    <div class="form-group row">
        <label asp-for="medico.password" class="col-sm-2">Password</label>
        <input asp-for="medico.password" class="form-control" >
        <span asp-validation-for="medico.password" class="text-danger"></span>

    </div>  
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./ListaMedicos" class="btn btn-primary">Cancelar</a>
    </div>
</form>